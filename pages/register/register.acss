page{
  font-family: 'Helvetica Neue',Tahoma,Arial,PingFangSC-Regular,'Hiragino Sans GB','Microsoft Yahei',sans-serif;
  font-size:32rpx; 
}

input[:placeholder]{
font-size:32rpx; 
}
.modal-code{
  text-align: left;
}
.modal-code text,.modal-code input,.modal-code image{
  display: block; 
  line-height: 1.4rem;
  height: 1.4rem;
  float: left;
  margin-left: 0.2rem;
  font-size: 32rpx;
}
.modal-code input{
  width: 1.4rem;
}
.img-code{
  width: 1.6rem;
}