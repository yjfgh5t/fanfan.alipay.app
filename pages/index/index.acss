.page{
  font-family: 'Helvetica Neue',Tahoma,Arial,PingFangSC-Regular,'Hiragino Sans GB','Microsoft Yahei',sans-serif;
}

.head-img{
width:100%;
}

.view-block{
 background-color: #fff;
 margin-top:6rpx;
 clear: both;
 overflow: hidden;
 padding: 15rpx 25rpx;
 position: relative;
}

.item-img{
    width: 180rpx;
    height: 180rpx; 
}
.item-con{
    margin-left:20rpx;   
    padding: 0rpx; 
    display: block;
    width: 490rpx;
}
.item-con text{
    display:block;
    line-height: 45rpx;
    height: 45rpx; 
    color:#bfbfbf;
    font-family: 'Helvetica Neue',Tahoma,Arial,PingFangSC-Regular,'Hiragino Sans GB','Microsoft Yahei',sans-serif;
    font-size:26rpx;
}
.item-con text.desc{ 
    height:70rpx; 
    line-height:35rpx;
}

.item-con text.active .t-head{
    display: inline-block;
    line-height: 26rpx;
    height: 26rpx; 
    padding:4rpx 6rpx;
    color:white;
    margin-right:8rpx;
    border-radius: 4rpx;
}
.t-head.t-head-1{
  background-color: rgb(241, 136, 79);
}
.t-head.t-head-1::before{
 content:"特"; 
}
.t-head.t-head-2{
  background-color: rgb(112, 188, 70);
}
.t-head.t-head-2::before{
    content: "减";
}


.item-con text.price{
    font-size: 28rpx;
    position: absolute;
    bottom: 10rpx;
}

.price .cost{
    margin-left: 8rpx;
    color: #999;
    text-decoration: line-through;
    display:inline-block
}

.price .salePrice{ 
    display:inline-block;
    color: #ff3618; 
    font-size: 32rpx;
}

.mark-price::before{
    font-weight: 400;
    content: "\A5";
    font-size: 22rpx;
    margin-right: .053333rem;
    margin-right: .533333vw;
    display: inline-block;
}

